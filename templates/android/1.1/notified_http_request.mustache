package {{{packagename}}}.logic.utils;

/**
 * 
 * @author Jaume Grane
 * 
 *         Use for async requests
 */
public interface NotifiedHttpRequest {

	/**
	 * Status equals to 200
	 * 
	 * @param data
	 * @param tag
	 */
	public void notifySuccess(BetterHttpResponse response, int tag);

	/**
	 * Status distinct to 200
	 * 
	 * @param data
	 * @param tag
	 */
	public void notifyError(BetterHttpResponse response, int tag);

	/**
	 * Can not connect to host
	 * 
	 * @param data
	 * @param tag
	 */
	public void notifyNoConnection(int tag);

	/**
	 * Generic error during connection to host
	 * 
	 * @param data
	 * @param tag
	 */
	public void notifyErrorConnecting(Exception e, int tag);

}

